RewriteEngine on 
# posts.show
# url posts/id/slug.html
# pattern : ?posts=show&id=$1
# RewriteRule ^posts/([1-9][0-9]*)/[a-z0-9][a-z0-9\-]*\.html$ index.php?posts=show&id=$1 [L]
RewriteRule ^posts/([0-9]+)/[a-z0-9-]+\.html$ index.php?posts=show&id=$1 [L]

# /posts/id/slug-du-post.html

# posts.index
# url posts
# pattern : ?posts

RewriteRule ^posts$ index.php?posts [L]

# ROUTE D'AJOUT D'UN POST: affichage du formulaire
# PATTERN: /posts/add/form.html

            # ROUTE users.addForm
# URL: /posts/add/form.html
# PATTERN: ?posts=add-form 
 RewriteRule ^posts/add/form.html$ index.php?posts=add-form [L]

# RewriteRule ^posts/add/?$ index.php?posts=add-form [L]

	# ROUTE D'AJOUT D'UN POST: INSERT
	# 		PATTERN: /posts/add/insert.html
	# 		CTRL: ???
	# 		ACTION: ???
	# 		PAS DE TITLE CAR REDIRECTION VERS LA PAGE D'ACCUEIL
    RewriteRule ^posts/add/insert.html$ index.php?posts=insert  [L]

# ROUTE DE MODIFICATION D'UN POST: Affichage du formulaire
# 			PATTERN: /posts/id/slug-du-post/edit/form.html
# 			CTRL: ???
# 			ACTION: ???
# 			TITLE: Alex Parker - Edit a post
	  RewriteRule ^posts/([0-9]+)/[a-z0-9-]+/edit/form.html$ index.php?posts=edit&id=$1 [L]	

	  	# ROUTE DE MODIFICATION D'UN POST: UPDATE
		# 	PATTERN: /posts/id/slug-du-post/edit/update.html
		# 	CTRL: ???
		# 	ACTION: ???
		# 	PAS DE TITLE CAR REDIRECTION VERS LA PAGE DE DETAILS DU POST
			RewriteRule ^posts/([0-9]+)/[a-z0-9-]+/edit/update.html$ index.php?posts=update&id=$1 [L]	

	# ROUTE DE SUPPRESSION D'UN POST:
	# 		PATTERN: /posts/id/slug-du-post/delete.html
	# 		CTRL: ???
	# 		ACTION: ???
	# 		PAS DE TITLE CAR REDIRECTION VERS LA PAGE D'ACCUEIL
			RewriteRule ^posts/([0-9]+)/[a-z0-9-]+/delete.html$ index.php?posts=delete&id=$1 [L]	

# ------------------------
RewriteCond %{REQUEST_URI} !\.(js|css|jpg|gif|zip|png|pdf)$ [NC]
# RewriteRule ^(.*)$ index.php [L]